<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="UI.Product_Form_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewId"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/reference_no_layout"
            android:padding="10dp">
<!--            <TextView-->
<!--                android:layout_width="66dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="No"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="20sp"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:id="@+id/reference_no"
                android:textAlignment="center"
                android:background="@color/bluish_green"
                android:drawablePadding="8dp"

                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp">
            <!--            <TextView-->
            <!--                android:layout_width="66dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Price"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textSize="20sp"/>-->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/upload_item_image"
                android:background="@drawable/form_textbox"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:layout_marginTop="2dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/upload_item_image"
                android:layout_centerVertical="true">

            <Button
                android:id="@+id/upload_image_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="6dp"
                app:icon="@drawable/import_icon" />

                <Button
                    android:id="@+id/camera_image_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="6dp"
                    app:backgroundTint="@color/mid_green"
                    app:icon="@drawable/open_camera_icon" />
            </LinearLayout>

        </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">
            <!--            <TextView-->
            <!--                android:layout_width="66dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Price"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textSize="20sp"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/product_name"
                android:hint="Product name"
                android:background="@drawable/form_textbox"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/product_name_input_icon"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">
<!--            <TextView-->
<!--                android:layout_width="66dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Price"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="20sp"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/price"
                android:hint="Price"
                android:background="@drawable/form_textbox"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/icon_for_price_input"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">
<!--            <TextView-->
<!--                android:layout_width="66dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="remark"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="20sp"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/remark"
                android:hint="Description"
                android:background="@drawable/form_textbox"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/icone_for_input_input"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/cbPurchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased status" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:backgroundTint="@color/bluish_green"
                android:id="@+id/save_btn"
                android:text="Save"
                android:layout_marginTop="30px"
                android:layout_marginHorizontal="20px"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:backgroundTint="@color/red"
                android:id="@+id/delete_btn"
                android:text="Delete"
                android:layout_marginTop="30px"
                android:layout_marginHorizontal="20px"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:backgroundTint="@color/black"
                android:id="@+id/cancel_btn"
                android:text="Cancel"
                android:layout_marginTop="30px"
                android:layout_marginStart="130px"/>
        </LinearLayout>




    </LinearLayout>

    </ScrollView>



</RelativeLayout>